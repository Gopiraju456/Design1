<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0A4F87"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <androidx.viewpager.widget.ViewPager
        android:layout_marginLeft="10dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/close"
        android:id="@+id/viewpagers"/>
    <me.relex.circleindicator.CircleIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llllllllllll"
        app:layout_constraintTop_toBottomOf="@id/viewpagers"
        app:layout_constraintStart_toStartOf="@id/viewpagers"
        app:layout_constraintEnd_toEndOf="@id/viewpagers"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:id="@+id/close"
        android:scaleType="fitXY"
        android:background="@drawable/background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:textColor="#000"
        android:background="@drawable/background"
        android:text="NEXT-->"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="BACK"
        android:textColor="#000"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>