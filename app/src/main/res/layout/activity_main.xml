<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E3C7C7"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.denzcoskun.imageslider.ImageSlider
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:auto_cycle="true"
        app:period="1000"
        android:id="@+id/imageeslider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g1"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toStartOf="@id/g2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv1"
            android:src="@color/colorPrimary"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU1"/>


    </GridLayout>

    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/g1"
        app:layout_constraintTop_toTopOf="@id/g1"
        app:layout_constraintStart_toEndOf="@id/g1"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv2"
            android:src="@color/colorPrimaryDark"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU1"/>


    </GridLayout>
    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g3"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/g4"
        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv3"
            android:src="@mipmap/ic_launcher"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU3"/>


    </GridLayout>
    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/g3"
        app:layout_constraintBottom_toBottomOf="@id/g3"
        app:layout_constraintStart_toEndOf="@id/g3">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv4"
            android:src="@drawable/ic_launcher_foreground"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU4"/>


    </GridLayout>

    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g5"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintEnd_toStartOf="@id/g6"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv5"
            android:src="@drawable/ic_launcher_background"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU5"/>


    </GridLayout>
    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g6"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/g5"
        app:layout_constraintBottom_toBottomOf="@id/g5"
        app:layout_constraintStart_toEndOf="@id/g5">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv6"
            android:src="@color/colorPrimary"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU 6"/>


    </GridLayout>


    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g7"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/g5"
        app:layout_constraintEnd_toStartOf="@id/g8"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv7"
            android:src="@color/colorPrimary"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU7"/>


    </GridLayout>
    <GridLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/g8"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/g7"
        app:layout_constraintBottom_toBottomOf="@id/g7"
        app:layout_constraintStart_toEndOf="@id/g7">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv8"
            android:src="@color/colorPrimary"
            />
        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="GOPIRAJU8"/>


    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>